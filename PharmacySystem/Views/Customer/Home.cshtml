@{
    ViewData["Title"] = "Customer Home Page";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/5/w3.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<body>

    <!-- Sidebar: always visible -->
    <div class="w3-sidebar w3-bar-block w3-card w3-animate-left" id="mySidebar" style="display:none;width:250px;z-index:1000; background-color:#f8f8f8">
        <button class="w3-bar-item w3-button w3-large" onclick="w3_close()" style="text-align:left;">
            <i class="fa fa-times"></i> &nbsp; Close
        </button>

        <!-- Prescriptions Group -->
        <div class="w3-bar-item w3-text-grey w3-small">Prescriptions</div>
        <a class="w3-bar-item w3-button" asp-controller="LoadPrescription" asp-action="LoadPrescription">
            <i class="fa fa-upload"></i> &nbsp;Upload
        </a>
        <a class="w3-bar-item w3-button" asp-controller="LoadPrescription" asp-action="UnprocessedScript">
            <i class="fa fa-hourglass-half"></i> &nbsp;Pending
        </a>
        <a class="w3-bar-item w3-button" asp-controller="LoadPrescription" asp-action="ProcessedScript">
            <i class="fa fa-check-circle"></i> &nbsp;Approved
        </a>

        <hr />

        <!-- Orders Group -->
        <div class="w3-bar-item w3-text-grey w3-small">Orders</div>
        <a class="w3-bar-item w3-button" asp-controller="Order" asp-action="Order">
            <i class="fa fa-shopping-cart"></i> &nbsp;Place Order
        </a>
        <a class="w3-bar-item w3-button" asp-controller="Order" asp-action="Order">
            <i class="fa fa-receipt"></i> &nbsp;View Orders
        </a>

        <hr />

        <!-- Other Group -->
        <div class="w3-bar-item w3-text-grey w3-small">Other</div>
        <a class="w3-bar-item w3-button" asp-controller="GenerateReport" asp-action="GenerateReport">
            <i class="fa fa-file-pdf-o"></i> &nbsp;View Reports
        </a>
        <a class="w3-bar-item w3-button" asp-controller="Account" asp-action="Account">
            <i class="fa fa-user"></i> &nbsp;My Profile
        </a>
    </div>



    <!-- Main content: shifted right to make space for sidebar -->
    <div id="main" style="margin-left: 0;">

        <!-- Header: remove openNav button -->
        <div class="w3-teal">
            <div class="w3-container" style="display: flex; align-items: center; gap: 16px; padding:20px">
                <button id="openNav" class="w3-button w3-teal w3-xlarge" onclick="w3_open()">&#9776;</button>
                <h1 class="display-4" style="margin: 0;">HOME</h1>
            </div>
        </div>


        <div class="w3-container text-center">
            <h1 class="display-4">Welcome Mr. Doe</h1>
            <hr style="border: 1px solid white; width: 100%; text-align: center;" />
            <p>
                Welcome to the Ibhayi Pharmacy Systems customer home page.
            </p>
            <p>Use the menu to manage your prescriptions, request refills, view your orders, and generate reports all in one place..</p>
            <hr />
            <h4>Prescriptions</h4>
            <hr />
       </div>

        <div style="display: flex; justify-content: center;">
            <div class="dashboard-carousel" style="display: flex; gap: 16px;">
                <a asp-controller="LoadPrescription" asp-action="LoadPrescription" class="dashboard-card-link">
                    <div class="dashboard-card">
                        <div class="w3-card w3-center w3-light-grey dashboard-card-inner">
                            <i class="fa fa-upload w3-xxlarge w3-margin-top"></i>
                            <h4>Uploaded</h4>
                            <p>2</p>
                        </div>
                    </div>
                </a>
                <a asp-controller="LoadPrescription" asp-action="UnprocessedScript" class="dashboard-card-link">
                    <div class="dashboard-card">
                        <div class="w3-card w3-center w3-light-grey dashboard-card-inner">
                            <i class="fa fa-hourglass-half w3-xxlarge w3-margin-top"></i>
                            <h4>Pending</h4>
                            <p>2</p>
                        </div>
                    </div>
                </a>
                <a asp-controller="LoadPrescription" asp-action="ProcessedScript" class="dashboard-card-link">
                    <div class="dashboard-card">
                        <div class="w3-card w3-center w3-light-grey dashboard-card-inner">
                            <i class="fa fa-check-circle w3-xxlarge w3-margin-top"></i>
                            <h4>Processed</h4>
                            <p>1</p>
                        </div>
                    </div>
                </a>
                <a asp-controller="Order" asp-action="Order" class="dashboard-card-link">
                    <div class="dashboard-card">
                        <div class="w3-card w3-center w3-light-grey dashboard-card-inner">
                            <i class="fa fa-receipt w3-xxlarge w3-margin-top"></i>
                            <h4>Orders</h4>
                            <p>2</p>
                        </div>
                    </div>
                </a>
            </div>

        </div>


    </div>

    <script>
        function w3_open() {
          document.getElementById("main").style.marginLeft = "25%";
          document.getElementById("mySidebar").style.width = "25%";
          document.getElementById("mySidebar").style.display = "block";
          document.getElementById("openNav").style.display = 'none';
        }
        function w3_close() {
          document.getElementById("main").style.marginLeft = "0%";
          document.getElementById("mySidebar").style.display = "none";
          document.getElementById("openNav").style.display = "inline-block";
        }

        function myAccFunc() {
          var x = document.getElementById("demoAcc");
          if (x.className.indexOf("w3-show") == -1) {
            x.className += " w3-show";
            x.previousElementSibling.className += " w3-green";
          } else {
            x.className = x.className.replace(" w3-show", "");
            x.previousElementSibling.className =
            x.previousElementSibling.className.replace(" w3-green", "");
          }
        }

        function myDropFunc() {
          var x = document.getElementById("demoDrop");
          if (x.className.indexOf("w3-show") == -1) {
            x.className += " w3-show";
            x.previousElementSibling.className += " w3-green";
          } else {
            x.className = x.className.replace(" w3-show", "");
            x.previousElementSibling.className =
            x.previousElementSibling.className.replace(" w3-green", "");
          }
        }
    </script>

        <style>
            .dashboard-carousel {
                display: flex;
                overflow-x: auto;
                gap: 16px;
                padding: 16px;
                scroll-snap-type: x mandatory;
            }

            .dashboard-card {
                min-width: 200px;
                flex: 0 0 auto;
                scroll-snap-align: start;
            }

                .dashboard-card .w3-card {
                    height: 150px;
                }

                .dashboard-card::-webkit-scrollbar {
                    display: none; /* hide scrollbar */
                }
        </style>
</body>

