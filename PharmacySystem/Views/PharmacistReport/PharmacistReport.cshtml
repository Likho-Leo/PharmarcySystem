<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .container {
        margin-top: 0 !important;
        padding-top: 0 !important;
    }

    .text-white {
        --bs-text-opacity: 1;
        color: #000 !important;
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
        padding: 10px 15px;
        margin-bottom: 0;
    }

    .card-body {
        background-color: #ffffff;
        border: 1px solid #dee2e6;
        border-top: none;
        padding: 15px;
        margin-bottom: 1rem;
    }

    .order-card {
        background: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        margin-bottom: 20px;
        padding: 20px;
    }

    .order-header {
        background: #007bff;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        margin-bottom: 15px;
    }

    .patient-info {
        background: #e9ecef;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 15px;
    }

    .medication-item {
        background: white;
        border: 1px solid #e9ecef;
        border-radius: 5px;
        padding: 15px;
        margin-bottom: 15px;
    }

    .status-badge {
        padding: 5px 10px;
        border-radius: 15px;
        font-size: 0.8em;
        font-weight: bold;
    }

    .status-pending {
        background: #ffc107;
        color: #212529;
    }

    .status-processing {
        background: #17a2b8;
        color: white;
    }

    .status-ready {
        background: #28a745;
        color: white;
    }

    .priority-high {
        border-left: 4px solid #dc3545;
    }

    .priority-medium {
        border-left: 4px solid #ffc107;
    }

    .priority-low {
        border-left: 4px solid #28a745;
    }

    .summary-card {
        text-align: center;
        padding: 20px;
        border-radius: 8px;
        color: white;
        margin-bottom: 10px;
    }

        .summary-card.pending {
            background: #ffc107;
            color: #212529;
        }

        .summary-card.processing {
            background: #17a2b8;
        }

        .summary-card.ready {
            background: #28a745;
        }

        .summary-card.total {
            background: #6c757d;
        }

        .summary-card h4 {
            margin: 0;
            font-size: 2em;
        }

        .summary-card p {
            margin: 5px 0 0 0;
            font-size: 0.9em;
        }

    .btn {
        margin-right: 10px;
        margin-bottom: 10px;
    }

    .action-buttons {
        margin-top: 15px;
        padding-top: 15px;
        border-top: 1px solid #dee2e6;
    }

    .form-control:focus {
        border-color: #80bdff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .alert {
        margin-top: 1rem;
    }
</style>
