
@{
	ViewData["Title"] = "Forgot Password";
}

<div class="container wide-dark-box-login">
    <div class="card-body">
        <h2 class="text-center mb-4" style="color: white;">Forgot Password</h2>
        <hr />
        <p>Please enter your email address</p>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="mb-3">
                <label for="Email" class="form-label">Email<span style="color: red;">*</span></label>
                <input for="Email" type="text" class="form-control">
            </div>

            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            
            <a class="nav-link custom-btn text-center " asp-area="" asp-controller="Login" asp-action="ValidationPage">
                Continue
            </a>
        </form>
    </div>
</div>
