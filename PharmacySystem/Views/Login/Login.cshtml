@{
    ViewData["Title"] = "Login";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body style="margin-top:120px">
    <div class="container wide-dark-box-login">
        <div class="card-body">
            <h2 class="text-center mb-4" style="color: white;">Login</h2>
            <hr />
            <p>Please enter your email address and password to login</p>
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <label for="Email" class="form-label">Email<span style="color: red;">*</span></label>
                    <input for="Email" type="text" class="form-control">
                </div>
                <div class="form-group position-relative mb-3">
                    <label for="Password" class="form-label">Password<span style="color: red;">*</span></label>
                    <div class="input-group">
                        <input for="Password" type="password" class="form-control" id="passwordInput">
                        <span class="input-group-text">
                            <i class="fa fa-eye" id="togglePassword" style="cursor: pointer;"></i>
                        </span>
                    </div>
                    <span class="text-danger" for="Password"></span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                    </div>
                    <a href="~/Login/ForgotPassword" style="color:lime">Forgot Password?</a>
                </div>
                <hr />
                <a class="nav-link custom-btn text-center" asp-area="" asp-controller="PharmacyManager" asp-action="Home">
                    Pharmacy Manager
                </a>
                <br />
                <a class="nav-link custom-btn text-center" asp-area="" asp-controller="Dashboard" asp-action="Dashboard">
                    Pharmacist
                </a>
                <br />
                <a class="nav-link custom-btn text-center" asp-area="" asp-controller="Customer" asp-action="Home">
                    Customer
                </a>
                <br />
                <a class="nav-link custom-btn text-center " asp-area="" asp-controller="login" asp-action="SignUp">
                    Sign-Up
                </a>
            </form>
        </div>
    </div>
        
   
</body>

