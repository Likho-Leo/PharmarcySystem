
@{
	ViewData["Title"] = "Create New Password";
}

<div class="container wide-dark-box-login">
    <div class="card-body">
        <h2 class="text-center mb-4" style="color: white;">Create New Password</h2>
        <hr />
        <p>Please enter your new password</p>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="mb-3">
                <label for="Email" class="form-label">Create New Password<span style="color: red;">*</span></label>
                <input for="Email" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label for="Email" class="form-label">Confirm Password<span style="color: red;">*</span></label>
                <input for="Email" type="text" class="form-control">
            </div>
            <hr />

            <p>
                Password must:​<br />
                Have at least 1 capital letter(A-Z)​​<br />
                Have at least 8 characters(a-z)​​<br />
                Have at least 1 number(1-9)​​<br />
                Have at least 1 special character(!#$%^&*_-)​<br />
            </p>

            <a class="nav-link custom-btn text-center " asp-area="" asp-controller="Login" asp-action="Login">
                Continue
            </a>
        </form>
    </div>
</div>
