@{
    ViewData["Title"] = "AddDoctor";
}

<meta name="viewport" content="width=device-width, initial-scale=1" />
<link rel="stylesheet" href="https://www.w3schools.com/w3css/5/w3.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

<body>
    <div class="w3-sidebar w3-bar-block w3-card w3-animate-left" style="display:none" id="mySidebar">
        <button class="w3-bar-item w3-button w3-large"
                onclick="w3_close()">
            Close &times;
        </button>

        <a class="w3-bar-item w3-button" asp-area="" asp-controller="Dashboard" asp-action="Dashboard">Home</a>

        <button class="w3-button w3-block w3-left-align" onclick="myAccFunc()">
            Upload Prescription <i class="fa fa-caret-down"></i>
        </button>
        <div id="demoAcc" class="w3-hide w3-white w3-card">
            <a class="w3-bar-item w3-button" asp-area="" asp-controller="Prescriptions" asp-action="Prescriptions">Upload Prescriptions</a>
            <a class="w3-bar-item w3-button" asp-area="" asp-controller="Prescriptions" asp-action="DisplayAllPrescriptions">All Prescriptions</a>
        </div>
        <button class="w3-button w3-block w3-left-align" onclick="myAccFunc1()">
            Dispense Prescription <i class="fa fa-caret-down"></i>
        </button>
        <div id="demoAcc1" class="w3-hide w3-white w3-card">
            <a class="w3-bar-item w3-button" asp-area="" asp-controller="DispensePrescription" asp-action="FulfillOrders">Dispense Prescriptions</a>
            <a class="w3-bar-item w3-button" asp-area="" asp-controller="DispensePrescription" asp-action="DispensePrescription">Proccess Orders</a>
            <a class="w3-bar-item w3-button" asp-area="" asp-controller="DispensePrescription" asp-action="DisplayHistory">Dispense Prescriptions</a>

        </div>
        <a class="w3-bar-item w3-button" asp-area="" asp-controller="PharmacistReport" asp-action="PharmacistReport">Go To Reports</a>

    </div>


    <div id="main">
        <div class="w3-teal">
            <button id="openNav" class="w3-button w3-teal w3-xlarge" onclick="w3_open()">&#9776;</button>
            <div class="w3-container">
                <h3 class="display-4">MANAGE DOCTOR</h3>
            </div>
        </div>

        <div class="container mt-5">
            <div class="bg-white p-4 rounded shadow-sm">
                <h4 class="mb-3 text-center">RECORD DOCTOR</h4>
                <p class="text-muted text-center">
                    Welcome to the Manage Doctor section of our Pharmacy System.
                </p>

                <form asp-action="AddDoctor" method="post">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="Name" class="form-label">Name <span class="text-danger">*</span></label>
                            <input name="Name" type="text" class="form-control" required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="Surname" class="form-label">Surname <span class="text-danger">*</span></label>
                            <input name="Surname" type="text" class="form-control" required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="PracticeNumber" class="form-label">Practice Number <span class="text-danger">*</span></label>
                            <input name="PracticeNumber" type="text" class="form-control" required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="CellPhoneNumber" class="form-label">Phone Number <span class="text-danger">*</span></label>
                            <input name="CellPhoneNumber" type="tel" class="form-control" required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="EmailAddress" class="form-label">Email Address <span class="text-danger">*</span></label>
                            <input name="EmailAddress" type="email" class="form-control" aria-required="true" required />
                        </div>
                    </div>

                    @if (TempData["msg"] != null)
                    {
                        <div id="notification" class="mb-3 alert alert-info">
                            @TempData["msg"]
                        </div>
                    }

                    <div class="d-flex align-items-center mt-3">
                        <button type="submit" class="btn btn-success me-3">
                            <i class="fa fa-save"></i> Save
                        </button>
                        <a asp-controller="Doctor" asp-action="DisplayAllDoctor" class="btn btn-primary">
                            <i class="fa fa-list"></i> Display Records
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function w3_open() {
            document.getElementById("main").style.marginLeft = "25%";
            document.getElementById("mySidebar").style.width = "25%";
            document.getElementById("mySidebar").style.display = "block";
            document.getElementById("openNav").style.display = "none";
        }
        function w3_close() {
            document.getElementById("main").style.marginLeft = "0%";
            document.getElementById("mySidebar").style.display = "none";
            document.getElementById("openNav").style.display = "inline-block";
        }

        $(document).ready(function () {
            // Show notification if it exists
            if ($('#notification').text().trim() !== '') {
                $('#notification').fadeIn().delay(3000).fadeOut();
            }
        });
    </script>

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .w3-sidebar a:hover {
            background-color: #ccc !important;
        }

        .shadow-sm {
            box-shadow: 0 .125rem .25rem rgba(0, 0, 0, .075) !important;
        }

        form .form-label {
            font-weight: 500;
        }

        form .btn i {
            margin-right: 5px;
        }
    </style>
</body>

