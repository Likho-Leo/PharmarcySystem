@{
    ViewData["Title"] = "EditUser";
    var UserID = 1;
    var EmployeeNumber = "2245565";
    var Name = "Shantel";
    var Surname = "Van";
    var Gender = "Female";
    var IDNumber = "1901085648879";
    var DOB = "1919-01-08";
    var CellPhoneNumber = "0785645676";
    var AddressLine1 = "23 Marine Drive";
    var AddressLine2 = "Summerstrand";
    var Country = "South Africa";
    var Province = "Eastern Cape";
    var City = "Gqeberha";
    var TownSurburb = "Summerstrand";
    var PostalCode = "6001";
    var EmploymentDate = "2022-02-23";
    var EmailAddress = "shantel5@gmail.com";
    var Password = "ShantelVan5@";
    var HealthCouncilRegNO = 134326;
}

<meta name="viewport" content="width=device-width, initial-scale=1" />
<link rel="stylesheet" href="https://www.w3schools.com/w3css/5/w3.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

<body>
    <!-- Sidebar -->
    <div class="w3-sidebar w3-bar-block w3-card w3-animate-left" style="display:none" id="mySidebar">
        <button class="w3-bar-item w3-button w3-large" onclick="w3_close()">Close &times;</button>
        <a class="w3-bar-item w3-button" asp-controller="PharmacyManager" asp-action="Home"><i class="fa fa-home"></i> Home</a>
        <a class="w3-bar-item w3-button" asp-controller="PharmacyDetails" asp-action="DisplayAllPharmacyDetail"><i class="fa fa-hospital-o"></i> Pharmacy Details</a>
        <a class="w3-bar-item w3-button" asp-controller="User" asp-action="DisplayAllUser"><i class="fa fa-users"></i> Employees</a>
        <a class="w3-bar-item w3-button" asp-controller="Doctor" asp-action="DisplayAllDoctor"><i class="fa fa-user-md"></i> Doctors</a>
        <a class="w3-bar-item w3-button" asp-controller="Supplier" asp-action="DisplayAllSupplier"><i class="fa fa-truck"></i> Suppliers</a>
        <a class="w3-bar-item w3-button" asp-controller="ActiveIngredient" asp-action="DisplayAllActiveIngredient"><i class="fa fa-leaf"></i> Active Ingredients</a>
        <a class="w3-bar-item w3-button" asp-controller="Dosage" asp-action="DisplayAllDosage"><i class="fa fa-medkit"></i> Dosage</a>
        <a class="w3-bar-item w3-button" asp-controller="Schedule" asp-action="DisplayAllSchedule"><i class="fa fa-calendar"></i> Schedules</a>
        <a class="w3-bar-item w3-button" asp-controller="Medication" asp-action="DisplayAllMedication"><i class="fa fa-pills"></i> Medications</a>
        <a class="w3-bar-item w3-button" asp-controller="OrderStock" asp-action="DisplayAllOrderStock"><i class="fa fa-cubes"></i> Stock</a>
        <a class="w3-bar-item w3-button" asp-controller="Medication" asp-action="PrintStockReport"><i class="fa fa-print"></i> Print Report</a>
    </div>

    <div id="main">
        <div class="w3-teal">
            <button id="openNav" class="w3-button w3-teal w3-xlarge" onclick="w3_open()">&#9776;</button>
            <div class="w3-container">
                <h3 class="display-4">EDIT EMPLOYEE</h3>
            </div>
        </div>

        <div class="container mt-5">
            <div class="bg-white p-4 rounded shadow-sm">
                <h4 class="mb-3 text-center">UPDATE EMPLOYEE</h4>
                <p class="text-muted text-center">Welcome to the Manage Employees section of our Ward Management System.</p>

                <form asp-action="EditUser" method="post">
                    <input name="UserID" type="hidden" value="@UserID" />
                    <input name="EmployeeNumber" type="hidden" value="@EmployeeNumber" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Name <span class="text-danger">*</span></label>
                            <input name="Name" type="text" class="form-control" value="@Name" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Surname <span class="text-danger">*</span></label>
                            <input name="Surname" type="text" class="form-control" value="@Surname" required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Title <span class="text-danger">*</span></label>
                            <select name="Title" class="form-control" required>
                                <option value="">-- Select Title --</option>
                                <option value="Mr.">Mr.</option>
                                <option value="Ms.">Ms.</option>
                                <option value="Mrs." selected>Mrs.</option>
                                <option value="Prof.">Prof.</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Gender <span class="text-danger">*</span></label><br />
                            @foreach (var g in new[] { "Male", "Female", "Other" })
                            {
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="Gender" value="@g" @(Gender == g ? "checked" : "") />
                                    <label class="form-check-label">@g</label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">ID Number <span class="text-danger">*</span></label>
                            <input name="IDNumber" class="form-control" value="@IDNumber" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Date of Birth <span class="text-danger">*</span></label>
                            <input name="DOB" class="form-control" type="date" value="@DOB" required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Phone Number <span class="text-danger">*</span></label>
                            <input name="CellPhoneNumber" class="form-control" type="tel" value="@CellPhoneNumber" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Email Address <span class="text-danger">*</span></label>
                            <input name="EmailAddress" type="email" class="form-control" value="@EmailAddress" required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Password <span class="text-danger">*</span></label>
                            <input name="Password" type="text" class="form-control" value="@Password" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Role <span class="text-danger">*</span></label>
                            <select name="Role" class="form-control" required>
                                <option value="">-- Select Role --</option>
                                <option value="PharmacyManager">Pharmacy Manager</option>
                                <option value="Pharmacist" selected>Pharmacist</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Address Line 1 <span class="text-danger">*</span></label>
                            <input name="AddressLine1" type="text" class="form-control" value="@AddressLine1" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Address Line 2</label>
                            <input name="AddressLine2" type="text" class="form-control" value="@AddressLine2" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Country <span class="text-danger">*</span></label>
                            <input name="Country" type="text" class="form-control" value="@Country" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Province <span class="text-danger">*</span></label>
                            <input name="Province" type="text" class="form-control" value="@Province" required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">City <span class="text-danger">*</span></label>
                            <input name="City" type="text" class="form-control" value="@City" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Town/Suburb <span class="text-danger">*</span></label>
                            <input name="TownSurburb" type="text" class="form-control" value="@TownSurburb" required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Postal Code <span class="text-danger">*</span></label>
                            <input name="PostalCode" type="text" class="form-control" value="@PostalCode" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Health Council Reg No <span class="text-danger">*</span></label>
                            <input name="HealthCouncilRegNO" type="text" class="form-control" value="@HealthCouncilRegNO" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Employment Date <span class="text-danger">*</span></label>
                        <input name="EmploymentDate" class="form-control" type="date" value="@EmploymentDate" required />
                    </div>

                    @if (TempData["msg"] != null)
                    {
                        <div class="alert alert-info" id="notification">@TempData["msg"]</div>
                    }

                    <div class="d-flex justify-content-start align-items-center mt-3">
                        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
                        <span class="mx-2" style="border-right: 2px solid #ccc; height: 24px;"></span>
                        <a asp-controller="User" asp-action="DisplayAllUser" class="btn btn-primary"><i class="fa fa-list"></i> Display Records</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function w3_open() {
            document.getElementById("main").style.marginLeft = "25%";
            document.getElementById("mySidebar").style.width = "25%";
            document.getElementById("mySidebar").style.display = "block";
            document.getElementById("openNav").style.display = "none";
        }

        function w3_close() {
            document.getElementById("main").style.marginLeft = "0%";
            document.getElementById("mySidebar").style.display = "none";
            document.getElementById("openNav").style.display = "inline-block";
        }

        $(document).ready(function () {
            $('input, textarea, select').on('input', function () {
                $(this).siblings('.text-danger').hide();
            });

            if ($('#notification').text().trim() !== '') {
                $('#notification').fadeIn().delay(3000).fadeOut();
            }
        });
    </script>
</body>

