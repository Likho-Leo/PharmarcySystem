<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PharmacySystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PharmacySystem.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)


</head>

<body style="min-height: 100vh; display: flex; flex-direction: column; padding-bottom:70px">
    <header class="mb-0 pb-0">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-0 pb-0">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/Images/Logo.png" alt="Ibhayi Pharmacy System Logo">
                </a>
                @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ibhayi Pharmacy</a> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse mx-auto">
                    <di>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">ABOUT</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">CONTACT US</a>
                            </li>
                        </ul>                
                </div>
                @{
                    if (ViewData["Title"] == "Home Page" || ViewData["Title"] == "Login" || ViewData["Title"] == "Sign-up" || ViewData["Title"] == "Create New Password"
                    || ViewData["Title"] == "Forgot Password" || ViewData["Title"] == "Validation Page")

                    {
                        <div class="mx-5">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link custom-btn" asp-area="" asp-controller="login" asp-action="Login">
                                        LOGIN / REGISTER
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="mx-5">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link custom-btn" asp-area="" asp-controller="login" asp-action="Login">
                                        LOGOUT
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                }   
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        <div>
            @RenderBody()
        </div>
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PharmacySystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
  
</body>
</html>
